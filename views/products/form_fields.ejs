<div>
<label for="">Title product</label>
<input type="text" name="title" placeholder="product" value="<%= product.title%>">
</div>
<div>
<label for="">Partner</label>
<select name = "partner">
  <% partners.forEach(partner => { %>
   <% if (partner.id === product.partners) { %>
    <option selected label="<%= partner.name%>" value="<%= partner.id %>"></option>
   <% }else { %>
    <option label="<%= partner.name%>" value="<%= partner.id %>"></option>
    <% } %>
   
  <% }) %>
</select>
</div>
<div>
<label for="">Publish Date</label>
<!-- : is else in ejs  -->
<input type="date" name="publishDate" value="<%= product.publishDate ==null ?'' : product.publishDate.toISOString().split('T')[0] %>">
</div>
<div>
  <label for="">Number of product</label>
  <input type="number" min ='1' name="productCount" value="<%= product.productCount %>">
</div>
<div>
  <label for="">Cover </label>
  <input type="file" name="cover" class="filepond" >
</div>
<div>
  <label for="">Description</label>
  <textarea  name="description"><%= product.description %></textarea>
</div>
